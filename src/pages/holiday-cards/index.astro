---
import Snow from './snow.astro';
import GoogleAnalytics from '../../components/GoogleAnalytics.astro';
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Richardson Family Annual Christmas Cards</title>
    <meta
      name="description"
      content="The annual Christmas cards created by Mack Richardson to brighten the holiday for friends, family and customers."
    />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/assets/css/01_reset.css" />
    <link rel="stylesheet" href="/assets/css/holiday-cards.css" />
    <link rel="icon" type="image/x-icon" href="/assets/images/favicon.ico?v=1.1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Mountains+of+Christmas:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/88922a1596.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="site">
    <div class="site__wrapper">
      <header class="site__header">
        <h1 class="center">The Richardson Family Annual Christmas Cards</h1>
        <h2 class="center">
          <i class="fa-solid fa-wreath"></i> Sending the cheer - almost - every year
          <i class="fa-solid fa-tree-christmas"></i>
        </h2>
      </header>
      <section class="site__content">
        <figure id="2021">
          <figcaption>
            2021 - Holiday Run Intellivision Game Cartridge
          </figcaption>
          <section class="flex grid-ish">
            <img
              src="/assets/images/holiday-cards/2021/outside.jpg"
              width="1600"
              height="1218"
              class="greetingcard"
            />
            <img
              src="/assets/images/holiday-cards/2021/inside.jpg"
              width="1600"
              height="1218"
              class="greetingcard"
            />
          </section>
        </figure>
        <!-- end: 2021 -->

        <figure id="2020">
          <figcaption>2020 - You'll Believe a Sleigh Can Fly</figcaption>
          <section class="flex grid-ish">
            <img
              src="/assets/images/holiday-cards/2020/front.jpg"
              width="1146"
              height="2598"
              class="postcard"
            />
            <img
              src="/assets/images/holiday-cards/2020/back.jpg"
              width="1146"
              height="2598"
              class="postcard"
            />
          </section>
        </figure>

        <!-- end: 2020 -->
        <figure id="2019">
          <figcaption>2019 - The Richardson's Strike Back</figcaption>
          <section class="flex grid-ish">
            <img
              src="/assets/images/holiday-cards/2019/outside_1.jpg"
              width="1600"
              height="1218"
              class="greetingcard"
            />
            <img
              src="/assets/images/holiday-cards/2019/outside_2.jpg"
              width="1600"
              height="1218"
              class="greetingcard"
            />
            <img
              src="/assets/images/holiday-cards/2019/inside_1.jpg"
              width="1600"
              height="1218"
              class="greetingcard"
            />
            <img
              src="/assets/images/holiday-cards/2019/inside_2.jpg"
              width="1600"
              height="1218"
              class="greetingcard"
            />
          </section>
        </figure>
        <!-- end: 2019 -->
        <figure id="2018">
          <figcaption>2018 - Christmas with the Richardsons</figcaption>
          <section class="flex grid-ish">
            <img
              src="/assets/images/holiday-cards/2018/outside.jpg"
              width="1600"
              height="1218"
              class="greetingcard"
            />
            <img
              src="/assets/images/holiday-cards/2018/inside.jpg"
              width="1600"
              height="1218"
              class="greetingcard"
            />
          </section>
        </figure>
        <!-- end: 2018 -->
      </section>
    </div>
    <div class="snowfall">
      <Snow />
    </div>

    <GoogleAnalytics />
  </body>
</html>
