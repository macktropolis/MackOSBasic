---
// data imports
import * as site from "../data/site.json";

interface Props {
  title?: string;
  description?: string;
  author?: string;
}

const { title, description } = Astro.props;
const { version } = site;
const headerTitle = "MackOS";
---

<div class="card__wrapper">
  <div class="card alt featured" id="about">
    <header class="card__header">
      <img
        src="/assets/images/title-bar-close.png"
        height="28"
        width="28"
        class="control close"
        alt="Close"
      />
      <div class="title">
        <h3 class="card__title">{headerTitle} {version}</h3>
        <span class="icon">&nbsp;</span>
      </div>
      <img
        src="/assets/images/title-bar-expand.png"
        height="28"
        width="28"
        class="control expand"
      />
      <img
        src="/assets/images/title-bar-collapse.png"
        height="28"
        width="28"
        class="control collapse"
      />
    </header>

    <section class="card__content">
      <article>
        <section class="hero-image">
          <img src="/assets/images/mack-photo.jpg" alt="Mack" id="mack" />
          <svg xmlns="http://www.w3.org/2000/svg">
            <filter id="noiseFilter">
              <feTurbulence
                type="fractalNoise"
                baseFrequency="0.65"
                numOctaves="3"
                stitchTiles="stitch"></feTurbulence>
            </filter>

            <rect width="100%" height="100%" filter="url(#noiseFilter)"></rect>
          </svg>
        </section>

        <a href="#popup1" class="button primary">About Mack</a>
      </article>
    </section>
  </div>
</div><!-- end: .card-wrapper -->

<style>
  .control {
    opacity: 0;
  }
  .card__content {
    display: block !important;
    padding: 0;
  }
  .card__content article {
    border: 1px solid red;
    display: flow-root;
    padding: 0;
    width: 100%;
    max-width: 100%;
  }
  .card__content .hero-image {
    position: relative;
    overflow: hidden;
    height: 100%;
    width: 100%;
  }
  .card__content img {
    border: none;
    display: block;
    height: 128px !important;
    width: 128px !important;
    shape-outside: url("/assets/images/mack.png");
    shape-margin: 1rem;
  }
</style>
