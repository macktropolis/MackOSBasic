---
// utils imports
import { slugify } from "../js/utils";

interface Props {
  tags: any[];
}

const { tags } = Astro.props;
---

{
  tags && (
    <div class="tag-cloud">
      <ul class="tags">
        {tags.map((tag) => (
          <li>
            <a href={`/tags/${slugify(tag)}`} aria-hidden="true" tabindex="-1">
              <small>{tag}</small>
            </a>
          </li>
        ))}
      </ul>
    </div>
  )
}

<style>
  .tag-cloud {
    clear: both;
    display: grid;
    align-items: center;
    margin: 1.5rem 0 0 0;
    padding: 0 0 0 10px;
  }
  .tag-cloud ul.tags {
    align-items: start;
    display: flex;
    flex-wrap: wrap;
    gap: 0.2rem;
    justify-content: start;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .tag-cloud ul.tags li {
    all: unset;
    line-height: 100%;
    margin: 0 !important;
    padding: 0 !important;
  }
  .tags a {
    -webkit-border-bottom-right-radius: 3px;
    -webkit-border-top-right-radius: 3px;
    -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    background: #777;
    border-bottom-right-radius: 3px;
    border-top-right-radius: 3px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    color: #fff !important;
    display: inline-block;
    font-size: 11px;
    font-weight: bold;
    height: 24px;
    line-height: 24px;
    margin: 0;
    padding: 0 10px 0 12px;
    position: relative;
    text-decoration: none;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }
  .tags a::before {
    content: "";
    position: absolute;
    top: 0;
    left: -12px;
    width: 0;
    height: 0;
    border-color: transparent #3243a5 transparent transparent;
    border-style: solid;
    border-width: 12px 12px 12px 0;
  }

  .tags a::after {
    content: "";
    position: absolute;
    top: 10px;
    left: 1px;
    float: left;
    width: 5px;
    height: 5px;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    background: #fff;
    -webkit-box-shadow: -1px -1px 2px rgba(0, 0, 0, 0.4);
    box-shadow: -1px -1px 2px rgba(0, 0, 0, 0.4);
  }
  .tags a {
    background: #f58220;
  }
  .tags a::before {
    border-color: transparent #f58220 transparent transparent;
  }
  .tags a::after {
    border-color: transparent transparent transparent #f58220;
  }
  .tags li:nth-child(2n) a {
    background: #97c224;
  }
  .tags li:nth-child(2n) a::before {
    border-color: transparent #97c224 transparent transparent;
  }
  .tags li:nth-child(2n) a::after {
    border-color: transparent transparent transparent #97c224;
  }
  .tags li:nth-child(3n) a {
    background: #de3f3e;
  }
  .tags li:nth-child(3n) a::before {
    border-color: transparent #de3f3e transparent transparent;
  }
  .tags li:nth-child(3n) a::after {
    border-color: transparent transparent transparent #de3f3e;
  }
  .tags li:nth-child(4n) a {
    background: #ec008c;
  }
  .tags li:nth-child(4n) a::before {
    border-color: transparent #ec008c transparent transparent;
  }
  .tags li:nth-child(4n) a::after {
    border-color: transparent transparent transparent #ec008c;
  }
  .tags li:nth-child(5n) a {
    background: #00a6df;
  }
  .tags li:nth-child(5n) a::before {
    border-color: transparent #00a6ef transparent transparent;
  }
  .tags li:nth-child(5n) a::after {
    border-color: transparent transparent transparent #00a6df;
  }
  .tags a:hover {
    background: #222 !important;
  }
  .tags a:hover::before {
    border-color: transparent #222 transparent transparent !important;
  }
  .tags a:hover:after {
    border-color: transparent transparent transparent #222 !important;
  }
  .tags a small {
    font-size: 10px;
  }
</style>
