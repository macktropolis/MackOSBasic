---
// utils imports
import { slugify } from "../js/utils";

interface Props {
  title?: string;
  description?: string;
  author?: string;
  headerTitle?: string;
}

const { title, description, headerTitle } = Astro.props;
---

<div class="card__wrapper">
  <div class="card alt featured" id="about">
    <header class="card__header">
      <img
        src="/assets/images/title-bar-close.png"
        height="28"
        width="28"
        class="control close"
        alt="Close"
      />
      <div class="title">
        <h3 class="card__title">{headerTitle ?? "Articles"}</h3>
        <span class="icon">&nbsp;</span>
      </div>
      <img
        src="/assets/images/title-bar-expand.png"
        height="28"
        width="28"
        class="control expand"
      />
      <img
        src="/assets/images/title-bar-collapse.png"
        height="28"
        width="28"
        class="control collapse"
      />
      <a href="/" class="button">&nbsp;</a>
    </header>

    <section class="card__content">
      <article>
        <h1>{title ?? "Blog Articles"}</h1>
        <p>
          {
            description ??
              "I write about comic books, coding and everything in between."
          }
        </p>
      </article>
    </section>
  </div>
</div><!-- end: .card-wrapper -->

<style>
  .control {
    opacity: 0;
  }
  .control.close {
    opacity: 1;
  }
  .card__wrapper {
    margin: 0 auto 2rem auto;
    max-width: 95%;
    width: fit-content;
  }
  .card__header a.button {
    all: unset;
    position: absolute;
    top: 0;
    left: 0;
    height: 36px;
    width: 36px;
  }
</style>
